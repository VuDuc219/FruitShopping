<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button background color -->
    <solid android:color="@color/green" /> <!-- Replace with your desired color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- Adjust the radius to control how rounded the corners are -->

    <!-- Button border (optional) -->
    <stroke android:width="2dp" android:color="@android:color/white" /> <!-- Optional border -->

    <!-- Button padding (optional) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp"/>
</shape>
